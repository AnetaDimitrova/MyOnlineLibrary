@model RegisterViewModel
@using MyOnlineLibrary.Core.Models;
@{

    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card">
                <h2 class="card-title text-center">Register </h2>
                <div class="card-body py-md-4">
                    <form _lpchecked="1" id="registerForm" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label hidden="hidden" asp-for="@Model.UserName"></label>
                            <input class="form-control " autocomplete="username" aria-required="true" placeholder="User Name" asp-for="@Model.UserName" />
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label hidden="hidden" asp-for="@Model.Email"></label>
                            <input class="form-control " autocomplete="email" aria-required="true" placeholder="Email" asp-for="@Model.Email" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label hidden="hidden" asp-for="@Model.Password"></label>
                            <input class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Password" asp-for="@Model.Password" />
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label hidden="hidden" asp-for="@Model.ConfirmPassword"></label>
                            <input class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" asp-for="@Model.ConfirmPassword" />
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div >    
                            <button id="registerSubmit" type="submit" class="btn btn-primary">Create Account</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
