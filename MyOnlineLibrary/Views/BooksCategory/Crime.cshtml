@model IEnumerable<BookViewModel>
@using MyOnlineLibrary.Core.Models;
@{
    ViewBag.Title = "Crime";
}


<h2 class="text-center">@ViewBag.Title</h2>


<div class="text-center row">
    @foreach (var book in Model)
    {
        <div class="container">
            <div class="center list flex-column">
                <div class="card flex-row close">
                    <img src=@book.ImageUrl class="book">
                    <div class="flex-column info">
                        <div class="title">@book.Title</div>
                        <div class="author">@book.Author</div>
                        <div class="hidden bottom summary">
                            @book.Description

                        </div>

                    </div>
                    <div class="members">
                        Rating:
                        <span class="current">@book.Rating</span>/
                        <span class="max">5</span>
                    </div>
                    <div >
                        <form class="input-group-sm" asp-controller="Books" asp-action="AddToCollection" asp-route-bookId="@book.Id">
                            <input type="submit" value="Add to Collection" class="fs-6 btn btn-success mb-3 p-2" />
                        </form>
                    </div>
                </div>
            </div>
        </div>

    }
</div>
