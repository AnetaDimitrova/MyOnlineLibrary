@model IEnumerable<BookViewModel>
@using MyOnlineLibrary.Core.Models
@{
    ViewBag.Title = "My Books";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr class="visually-hidden"/>



<div class="text-center row">

    
    @foreach (var book in Model)
    {
        <div class="col-2" style="width: 20rem; ">
            <a href="/Books/SearchDescription?id=@book.Id">
        <div class="card my-card">
            
                <img class="card-img-top" style="width: 18rem;"
                 src="@book.ImageUrl" alt="Book Image">

        </div>
        </a>
            <div class="btn-remove">
                <form class="input-group-sm" asp-controller="Books" asp-action="RemoveFromCollection" asp-route-bookId="@book.Id">
                    <input class="fs-6 btn btn-success mb-3 p-2" type="submit" value="Remove" />
                </form>

            </div>
        </div>

        
    }
 
</div>